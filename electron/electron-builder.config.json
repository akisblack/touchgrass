{
  "appId": "io.github.akisblack.touchgrass",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "publish": {
    "provider": "github"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "assets/appIcon.ico"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "assets/appIcon.png"
  },
  "linux": {
    "target": ["AppImage", "tar.gz"],
    "icon": "assets/appIcon.png"
  }
}